{
    "settings": {
        "number_of_shards": 5,
        "number_of_replicas": 1,
        "index": {
            "analysis": {
                "analyzer": {
                    "nori_token_analyzer": {
                        "type": "custom",
                        "tokenizer": "nori_base_tokenizer"
                    }
                },
                "tokenizer": {
                    "nori_base_tokenizer": {
                        "type": "nori_tokenizer",
                        "decompound_mode": "none",
                        "discard_punctuation": false
                    }
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "system": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 512,
                        "doc_values": false
                    }
                }
            },
            "user": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    },
                    "nori": {
                        "type": "text",
                        "analyzer": "nori_token_analyzer"
                    }
                }
            },
            "idx": {
                "type": "integer"
            }
        }
    }
}
